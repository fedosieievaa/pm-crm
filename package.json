        "next": "12.2.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "mobx": "^6.6.1",
        "mobx-react-lite": "^3.4.0",
        "react-router-dom": "6",
        "sass": "^1.54.4"
    },
    "devDependencies": {
        "@types/node": "18.7.13",
        "@types/react": "18.0.17",
        "@types/react-dom": "18.0.6",
        "eslint": "^8.21.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-function-name": "^2.0.1",
